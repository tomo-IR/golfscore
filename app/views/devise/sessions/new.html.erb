<div class="user-devise-block">
<h2>ログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Eメールアドレス, class: "user-devise-block__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-devise-block__textfield"  %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: "user-devise-block__label"  %>
    <%= f.password_field :password, autocomplete: "current-password", class: "user-devise-block__textfield"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン状態を保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "user-devise-block__submit"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
