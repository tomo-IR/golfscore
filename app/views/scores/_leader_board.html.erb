
<table>
  <tr>
    <th>rank</th>
    <th>name</th>
    <th>score</th>
    <th>THRU</th>
    <th>start_hole</th>
  </tr>
  <% s = 0 %>
  <% j = 1 %>
  <% @current_course_scores.each.with_index(1) do|score,i| %>
  <tr>
    <% if i == 1 %>
      <% s = score.total_score %>
    <% end %>

    <% if score.total_score != s %>
      <% j = i %>
      <td><%= j %></td>
      <td><%= score.user.name %></td>
      <td><%= score.total_score %></td>
      <td>
        <% if score.status == 1 %>
          F
        <% else %>
          <%= score.thru.to_i %>
        <% end %>
      </td>
      <% if score.start_hole == 10 %>
        <td>*</td>
      <% end %>
      <% s = score.total_score %>
    <% else %>
      <% s = score.total_score %>
      <td><%= j %></td>
      <td><%= score.user.name %></td>
      <td><%= score.total_score %></td>
      <td>
        <% if score.status == 1 %>
          F
        <% else %>
          <%= score.thru.to_i %>
        <% end %>
      </td>
      <% if score.start_hole == 10 %>
        <td>*</td>
      <% else %>
        <td></td>
      <% end %>
    <% end %>
  </tr>
  <% end %>
</table>
